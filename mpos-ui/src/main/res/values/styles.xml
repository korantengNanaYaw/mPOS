<resources>

    <style name="MpuTransactionStatusIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">60sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MpuTransactionStatusTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:lines">2</item>
        <item name="android:textSize">@dimen/mpu_status_text</item>
        <item name="android:textColor">@color/mpu_status_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/mpu_activity_vertical_margin_half</item>
    </style>

    <style name="MpuTimestampTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/mpu_card_timestamp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MpuCardHeaderTextStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mpu_card_heading</item>
        <item name="android:textColor">@color/mpu_card_heading</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MpuCardHeaderAmountTextStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mpu_card_amount_heading</item>
        <item name="android:textColor">@color/mpu_card_heading</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MpuCardBodyTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mpu_card_body</item>
        <item name="android:textColor">@color/mpu_card_body</item>
    </style>

    <style name="MpuAccountNoTextStyle" parent="MpuCardBodyTextStyle">
        <item name="android:gravity">right</item>
        <item name="android:ellipsize">start</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MpuActionButtonStyle" parent="mpos.ui.Button">
        <item name="android:background">@drawable/mpu_payment_button</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>