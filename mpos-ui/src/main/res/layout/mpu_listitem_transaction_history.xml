<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/mpu_content_padding">

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical">
        <TextView
            style="@style/MpuCardBodyTextStyle"
            android:id="@+id/mpu_summary_tx_history_list_status_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sale"/>

        <TextView
            android:id="@+id/mpu_summary_tx_history_list_timestamp_view"
            style="@style/MpuTimestampTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="18th April 2016, 12:57"/>

        <TextView
            android:id="@+id/mpu_summary_tx_history_list_partial_cp_view"
            style="@style/MpuTimestampTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="out of reserved $27.00"/>

    </LinearLayout>

    <TextView
        style="@style/MpuCardBodyTextStyle"
        android:id="@+id/mpu_summary_tx_history_list_amount_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$12.34"/>

</LinearLayout>