<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed state -->
    <item android:state_pressed="true">
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
               android:insetLeft="@dimen/mpu_button_inset_horizontal_material"
               android:insetTop="@dimen/mpu_button_inset_vertical_material"
               android:insetRight="@dimen/mpu_button_inset_horizontal_material"
               android:insetBottom="@dimen/mpu_button_inset_vertical_material">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/mpu_control_corner_material" />
                <solid android:color="@color/mpu_payment_button_pressed_state" />
                <padding android:left="@dimen/mpu_button_padding_horizontal_material"
                         android:top="@dimen/mpu_button_padding_vertical_material"
                         android:right="@dimen/mpu_button_padding_horizontal_material"
                         android:bottom="@dimen/mpu_button_padding_vertical_material" />
            </shape>
        </inset>
    </item>

    <!-- focused state -->
    <item android:state_focused="true">
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
               android:insetLeft="@dimen/mpu_button_inset_horizontal_material"
               android:insetTop="@dimen/mpu_button_inset_vertical_material"
               android:insetRight="@dimen/mpu_button_inset_horizontal_material"
               android:insetBottom="@dimen/mpu_button_inset_vertical_material">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/mpu_control_corner_material" />
                <solid android:color="@color/mpu_payment_button_focused_state" />
                <padding android:left="@dimen/mpu_button_padding_horizontal_material"
                         android:top="@dimen/mpu_button_padding_vertical_material"
                         android:right="@dimen/mpu_button_padding_horizontal_material"
                         android:bottom="@dimen/mpu_button_padding_vertical_material" />
            </shape>
        </inset>
    </item>

    <!-- normal state -->
    <item>
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
               android:insetLeft="@dimen/mpu_button_inset_horizontal_material"
               android:insetTop="@dimen/mpu_button_inset_vertical_material"
               android:insetRight="@dimen/mpu_button_inset_horizontal_material"
               android:insetBottom="@dimen/mpu_button_inset_vertical_material">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/mpu_control_corner_material" />
                <solid android:color="@color/mpu_payment_button_normal_state" />
                <padding android:left="@dimen/mpu_button_padding_horizontal_material"
                         android:top="@dimen/mpu_button_padding_vertical_material"
                         android:right="@dimen/mpu_button_padding_horizontal_material"
                         android:bottom="@dimen/mpu_button_padding_vertical_material" />
            </shape>
        </inset>
    </item>
</selector>
