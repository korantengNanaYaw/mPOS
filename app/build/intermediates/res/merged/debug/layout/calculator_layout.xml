<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/smallscreen"
        android:layout_width="match_parent"
        android:hint="GHâ‚µ 0.0"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="40sp"

        android:textColor="#fff20300"
        android:paddingRight="50dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"

        android:layout_alignParentTop="false"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Add Note"
        android:id="@+id/addnote"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/smallscreen"
        android:layout_alignStart="@+id/smallscreen" />


</RelativeLayout>




    </LinearLayout>
    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_weight=".12" >

        <Button

            style="@style/keypadButton"
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="1"
            android:textSize="25sp"
            android:layout_margin="3dp" />

        <Button
            style="@style/keypadButton"
            android:id="@+id/activeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="2"
            android:textSize="25sp"
            android:layout_margin="3dp" />

        <Button
            style="@style/keypadButton"
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="3"
            android:textSize="25sp"
            android:layout_margin="3dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".12" >

        <Button
            style="@style/keypadButton"
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="@string/button4"
            android:textSize="25sp"
            android:layout_margin="3dp" />

        <Button
            style="@style/keypadButton"
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="@string/button5"
            android:textSize="25sp"
            android:layout_margin="3dp" />

        <Button
            style="@style/keypadButton"
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="@string/button6"
            android:textSize="25sp"
            android:layout_margin="3dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".12"
        android:textSize="25sp" >

        <Button
            style="@style/keypadButton"
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="7"
            android:textSize="25sp"
            android:layout_margin="3dp" />

        <Button
            style="@style/keypadButton"
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="8"
            android:textSize="25sp"
            android:layout_margin="3dp" />

        <Button

            style="@style/keypadButton"
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="9"
            android:textSize="25sp"
            android:layout_margin="3dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".12" >



        <Button
            style="@style/keypadButton"
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="0"
            android:textSize="25sp"
            android:layout_margin="3dp" />

        <Button
            style="@style/keypadButton"
            android:id="@+id/buttonForget"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="."
            android:gravity="center_horizontal"
            android:textSize="40sp"
            android:layout_margin="3dp" />
        <Button
            android:layout_weight=".25"

            style="@style/keypadButton"
            android:id="@+id/buttonC"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:text="C"
            android:textSize="25sp"
            android:layout_margin="3dp" />


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".12" >



        <Button
            style="@style/keypadButton"
            android:id="@+id/checkOut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="CheckOut"
            android:textSize="16sp"
            android:layout_margin="3dp" />

        <Button
            style="@style/keypadButton"
            android:id="@+id/xigma"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:text="."
            android:visibility="invisible"
            android:gravity="center_horizontal"
            android:textSize="40sp"
            android:layout_margin="3dp" />
        <Button
            android:layout_weight=".25"

            style="@style/keypadButton"
            android:id="@+id/buttonCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:text="AddToCart"
            android:textSize="15sp"
            android:layout_margin="3dp" />


    </LinearLayout>



</LinearLayout>